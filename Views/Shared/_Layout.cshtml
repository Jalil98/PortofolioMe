<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portofolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portofolio.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top shadow-sm" style="background-color: #5dade2;">
            <div class="container">
                <a class="navbar-brand fw-bold" href="/">PortofolioKu</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link hover-link" href="/">Beranda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hover-link" href="/Home/About">Tentang</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hover-link" asp-controller="Home" asp-action="ProyekSaya">Proyek</a> 
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hover-link" href="/Home/Contact">Kontak</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <style>
        .hover-link {
            transition: color 0.3s ease, transform 0.3s ease;
        }

            .hover-link:hover {
                color: #ffdd57 !important;
                transform: translateY(-2px);
            }

        body {
            padding-top: 70px; /* supaya tidak ketutup navbar */
        }
    </style>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - Portofolio - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        window.addEventListener('scroll', function () {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('shadow');
            } else {
                navbar.classList.remove('shadow');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
